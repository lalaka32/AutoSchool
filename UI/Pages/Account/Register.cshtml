@page
@model UI.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Please SignUp</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <label for="login">Login</label><br />
    <input type="text" name="login" id="login" asp-for="registryModel.Login" required /><br /><br />
    <span asp-validation-for="registryModel.Login" class="text-danger"></span>
    <label for="password">Password</label><br />
    <input name="password" id="password" asp-for="registryModel.Password" type="password" required /><br /><br />
    <span asp-validation-for="registryModel.Password" class="text-danger"></span>
    <label for="confirmPassword">Confirm password</label><br />
    <input name="confirmPassword" id="confirmPassword" asp-for="registryModel.ConfirmPassword" type="password" required/><br /><br />
    <span asp-validation-for="registryModel.ConfirmPassword" class="text-danger"></span>
    <hr/>
    <input type="submit" value="SignUp" />
</form>